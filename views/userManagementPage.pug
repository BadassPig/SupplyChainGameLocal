// extends layout

include layout.pug

block content
    script(src='/javascripts/userManagementPage.js')
    link(rel='stylesheet', href='/stylesheets/userManagementPageStyle.css')
    h1= title
    p Welcome to our test

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Role:
                |  <span id='userInfoRole'></span>
                br
                strong Password:
                |  <span id='userInfoPassword'></span>
                br
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th UserRole
                    th Instructor(Player only)
                    th Delete?
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='UserName')
                input#inputUserRole(type='text', placeholder='UserRole')
                br
                input#inputInstructor(type='text', placeholder='Instructor')
                input#inputUserPassword(type='text', placeholder='Password')
                br
                button#btnAddUser Add User
        // /ADD USER
    // /WRAPPER